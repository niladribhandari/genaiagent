# Global Environment Configuration for GenAI Agent Platform
# This file contains system-wide configuration that applies to all components

# ====================================================================
# SYSTEM CONFIGURATION
# ====================================================================

# Platform Information
PLATFORM_NAME=GenAI_Agent_Platform
PLATFORM_VERSION=1.0.0
ENVIRONMENT=development

# Base URLs and Ports
MCP_SERVER_PORT=3001
REACT_APP_PORT=3000
WORKFLOW_AGENT_PORT=8080

# URLs
MCP_SERVER_URL=http://localhost:3001
REACT_APP_URL=http://localhost:3000
WORKFLOW_AGENT_URL=http://localhost:8080

# ====================================================================
# API KEYS AND SECRETS
# ====================================================================

# OpenAI Configuration (Shared across all agents)
OPENAI_API_KEY=sxxxxxxxx
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.1

# GitHub Configuration
GITHUB_TOKEN=github_pat_xxxx
# Search Engine APIs
SERP_API_KEY=xxxxxxx
# GOOGLE_API_KEY=your_google_api_key_here
# GOOGLE_CSE_ID=your_custom_search_engine_id_here

# Authentication (if implementing)
# JWT_SECRET=your_jwt_secret_here
# SESSION_SECRET=your_session_secret_here
# API_KEY=your_api_key_here

# ====================================================================
# DATABASE CONFIGURATION
# ====================================================================

# SQLite Configuration
DB_TYPE=sqlite
DB_PATH=./data/workflows.db
ENABLE_DB_LOGGING=false
DB_BACKUP_ENABLED=true
DB_BACKUP_INTERVAL=24

# ====================================================================
# LOGGING CONFIGURATION
# ====================================================================

# Global Logging
LOG_LEVEL=info
LOG_DIRECTORY=./logs
ENABLE_CONSOLE_LOGGING=true
ENABLE_FILE_LOGGING=true
LOG_ROTATION_ENABLED=true
LOG_RETENTION_DAYS=30

# ====================================================================
# PERFORMANCE CONFIGURATION
# ====================================================================

# Timeouts (in seconds)
DEFAULT_TIMEOUT=300
AGENT_TIMEOUT=120
HTTP_TIMEOUT=30
DB_TIMEOUT=10

# Concurrency
MAX_CONCURRENT_WORKFLOWS=10
MAX_CONCURRENT_AGENTS=5
MAX_CONCURRENT_REQUESTS=20

# Rate Limiting
ENABLE_RATE_LIMITING=true
REQUESTS_PER_MINUTE=100
BURST_LIMIT=200

# Caching
ENABLE_CACHING=true
CACHE_DURATION=3600
MAX_CACHE_SIZE_MB=1000

# ====================================================================
# SECURITY CONFIGURATION
# ====================================================================

# CORS Configuration
CORS_ENABLED=true
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:8080
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=Content-Type,Authorization,X-Requested-With

# Security Headers
ENABLE_SECURITY_HEADERS=true
ENABLE_HELMET=true
ENABLE_CSRF_PROTECTION=false

# ====================================================================
# FEATURE FLAGS
# ====================================================================

# Workflow Features
ENABLE_WORKFLOW_TEMPLATES=true
ENABLE_APPROVAL_GATES=true
ENABLE_WORKFLOW_PERSISTENCE=true
ENABLE_AUDIT_TRAIL=true

# Agent Features
ENABLE_CODE_GENERATION=true
ENABLE_CODE_COMPILATION=true
ENABLE_CODE_REVIEW=true
ENABLE_GITHUB_SEARCH=true
ENABLE_WEB_SEARCH=true
ENABLE_API_SPEC_WRITING=true

# UI Features
ENABLE_DEBUG_MODE=true
ENABLE_REAL_TIME_UPDATES=true
ENABLE_PROGRESS_TRACKING=true
ENABLE_WORKFLOW_VISUALIZATION=true

# Advanced Features
ENABLE_METRICS=true
ENABLE_ANALYTICS=false
ENABLE_MONITORING=true
ENABLE_HEALTH_CHECKS=true

# ====================================================================
# INTEGRATION CONFIGURATION
# ====================================================================

# External Services
ENABLE_EXTERNAL_APIS=true
ENABLE_WEBHOOK_SUPPORT=false
ENABLE_NOTIFICATIONS=false

# File System
WORKSPACE_DIRECTORY=/Users/niladrib/WorkingFolder/genaiagent
DATA_DIRECTORY=./data
TEMP_DIRECTORY=./temp
BACKUP_DIRECTORY=./backup

# ====================================================================
# DEVELOPMENT CONFIGURATION
# ====================================================================

# Development Mode
NODE_ENV=development
DEBUG=true
ENABLE_HOT_RELOAD=true
ENABLE_LIVE_RELOAD=true

# Testing
ENABLE_TESTING_MODE=false
MOCK_EXTERNAL_APIS=false
ENABLE_TEST_DATA=false

# Build Configuration
ENABLE_SOURCE_MAPS=true
ENABLE_MINIFICATION=false
ENABLE_COMPRESSION=false

# ====================================================================
# MONITORING AND HEALTH
# ====================================================================

# Health Checks
HEALTH_CHECK_INTERVAL=60
HEALTH_CHECK_TIMEOUT=10
ENABLE_DEPENDENCY_CHECKS=true

# Metrics
METRICS_COLLECTION_INTERVAL=300
ENABLE_PERFORMANCE_METRICS=true
ENABLE_ERROR_TRACKING=true

# Alerts
ENABLE_ERROR_ALERTS=false
ERROR_THRESHOLD=5
ALERT_EMAIL=admin@example.com
