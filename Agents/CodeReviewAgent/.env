# Code Review Agent Configuration

# Agent Identification
AGENT_NAME=CodeReviewAgent
AGENT_VERSION=1.0.0

# OpenAI Configuration
# OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.1

# Review Configuration
SUPPORTED_LANGUAGES=python,javascript,typescript,java,csharp,go,rust
REVIEW_TIMEOUT=180
MAX_CONCURRENT_REVIEWS=2

# Analysis Configuration
ENABLE_SECURITY_ANALYSIS=true
ENABLE_PERFORMANCE_ANALYSIS=true
ENABLE_BEST_PRACTICES_CHECK=true
ENABLE_CODE_SMELL_DETECTION=true
ENABLE_DOCUMENTATION_CHECK=true

# Quality Metrics
MIN_CODE_QUALITY_SCORE=7.0
MAX_COMPLEXITY_THRESHOLD=10
MAX_FUNCTION_LENGTH=50
MAX_FILE_LENGTH=500

# Static Analysis Tools
ENABLE_PYLINT=true
ENABLE_ESLINT=true
ENABLE_SONARQUBE=false
ENABLE_BANDIT=true

# Output Configuration
REPORT_FORMAT=json
DETAILED_REPORTS=true
INCLUDE_SUGGESTIONS=true
INCLUDE_EXAMPLES=true

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/review.log
ENABLE_REVIEW_HISTORY=true

# Feature Flags
ENABLE_AUTO_FIX_SUGGESTIONS=true
ENABLE_LEARNING_MODE=false
ENABLE_TEAM_STANDARDS=true
ENABLE_CUSTOM_RULES=false

# Integration Configuration
MCP_SERVER_URL=http://localhost:3001
WORKFLOW_AGENT_URL=http://localhost:8080

# Review Criteria Weights
SECURITY_WEIGHT=0.3
PERFORMANCE_WEIGHT=0.2
MAINTAINABILITY_WEIGHT=0.25
READABILITY_WEIGHT=0.15
DOCUMENTATION_WEIGHT=0.1
