# Development Configuration for AgenticAI Code Generation System

# Editor Configuration
[tool.vscode]
python.defaultInterpreterPath = "./venv/bin/python"
python.testing.pytestEnabled = true
python.testing.pytestArgs = ["tests/"]
python.linting.enabled = true
python.linting.flake8Enabled = true
python.formatting.provider = "black"

# Git Hooks Configuration
[githooks]
pre-commit = [
    "make format",
    "make lint", 
    "make type-check",
    "make test-unit"
]

# Environment Variables for Development
AGENTIC_DEBUG=true
AGENTIC_LOG_LEVEL=DEBUG
AGENTIC_CACHE_DIR=.agentic_cache

# Default paths for development
DEFAULT_SPEC_PATH=../API-requirements/policy_management_spec.yml
DEFAULT_INSTRUCTIONS_PATH=../InstructionFiles/java_springboot.yml
DEFAULT_OUTPUT_PATH=generated_examples

# Testing Configuration
PYTEST_ARGS=-v --tb=short
COVERAGE_MIN_PERCENTAGE=80

# Documentation Configuration  
DOCS_PORT=8000
DOCS_AUTO_RELOAD=true

# Development Server Configuration
DEV_SERVER_HOST=localhost
DEV_SERVER_PORT=8080
DEV_SERVER_DEBUG=true

# Code Quality Thresholds
MAX_LINE_LENGTH=88
MAX_COMPLEXITY=10
MIN_TEST_COVERAGE=80

# Performance Configuration
MAX_CONCURRENT_AGENTS=5
AGENT_TIMEOUT_SECONDS=300
CACHE_TTL_SECONDS=3600
