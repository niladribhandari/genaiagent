# API Spec Writing Agent Configuration

# Agent Identification
AGENT_NAME=WriteAPISpecAgent
AGENT_VERSION=1.0.0

# OpenAI Configuration
# OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.1

# API Specification Configuration
DEFAULT_SPEC_FORMAT=openapi
SUPPORTED_FORMATS=openapi,swagger,raml,api-blueprint
DEFAULT_VERSION=3.0.3
ENABLE_VALIDATION=true

# Template Configuration
TEMPLATE_DIRECTORY=./templates
ENABLE_CUSTOM_TEMPLATES=true
DEFAULT_TEMPLATE=rest_api

# Supported API Types
ENABLE_REST_API=true
ENABLE_GRAPHQL_API=true
ENABLE_GRPC_API=false
ENABLE_WEBSOCKET_API=true

# Generation Configuration
INCLUDE_EXAMPLES=true
INCLUDE_SCHEMAS=true
INCLUDE_SECURITY_DEFINITIONS=true
INCLUDE_ERROR_RESPONSES=true
INCLUDE_DOCUMENTATION=true

# Validation Configuration
ENABLE_SCHEMA_VALIDATION=true
ENABLE_EXAMPLE_VALIDATION=true
ENABLE_SECURITY_VALIDATION=true
STRICT_VALIDATION=false

# Output Configuration
OUTPUT_DIRECTORY=./generated_specs
BACKUP_DIRECTORY=./backup
OUTPUT_FORMAT=yaml
ENABLE_JSON_OUTPUT=true

# Documentation Configuration
INCLUDE_GETTING_STARTED=true
INCLUDE_AUTHENTICATION_GUIDE=true
INCLUDE_SDK_EXAMPLES=true
GENERATE_POSTMAN_COLLECTION=true

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/api_spec.log
ENABLE_GENERATION_HISTORY=true

# Feature Flags
ENABLE_AUTO_VERSIONING=true
ENABLE_CHANGE_DETECTION=true
ENABLE_BACKWARD_COMPATIBILITY_CHECK=true
ENABLE_MOCK_SERVER_CONFIG=true

# Integration Configuration
MCP_SERVER_URL=http://localhost:3001
WORKFLOW_AGENT_URL=http://localhost:8080

# Quality Configuration
MIN_ENDPOINT_COVERAGE=0.8
REQUIRE_DESCRIPTIONS=true
REQUIRE_EXAMPLES=true
REQUIRE_ERROR_HANDLING=true

# Security Configuration
ENABLE_SECURITY_ANALYSIS=true
DEFAULT_SECURITY_SCHEME=bearerAuth
INCLUDE_OAUTH_CONFIG=false
INCLUDE_API_KEY_CONFIG=true
